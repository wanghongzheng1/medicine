/**index.wxss**/
page {
  height: 100vh;
  position: relative;
  background: #f1f1f1;

}

.footer{
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  height: 200rpx;
  padding-top: 30rpx;
  bottom: 0rpx;
  background: #fff;
}
.navigation{
  background: #282a3a;
  height: 240rpx;
  display: flex;
  align-items: flex-end;
  
}
.navigation .content{
  width: 100%;
  padding-bottom: 20rpx;
  font-size: 40rpx;
  color: #95be3a;
  text-align: center;
  position: relative;
}
.navigation .content .remind{
  position: absolute;
  right: 30rpx;
  top: 2rpx;
  width: 60rpx;
  height: 60rpx;
}
.navigation .content .remind image{
  position: relative;
  width: 100%;
  height: 100%;
}
.navigation .content .remind .num{
  position: absolute;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background: red;
  color: #fff;
  font-size: 26rpx;
  top: -10rpx;
  right: -14rpx;
  
}